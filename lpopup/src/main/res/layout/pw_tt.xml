<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_pw_tt_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/m30"
        android:background="@drawable/bg_white_fillet_10"
        >

        <!--标题-->
        <TextView
            android:id="@+id/tv_pw_tt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:textSize="@dimen/s18"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/m15"/>

        <TextView
            android:id="@+id/tv_pw_tt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_long"
            android:textSize="@dimen/s15"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/m5"
            android:layout_marginBottom="@dimen/m25"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginHorizontal="@dimen/m15"
            />
        <View
            style="@style/View_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pw_tt_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textSize="@dimen/s15"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="@dimen/m15"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grayBF"/>
            <TextView
                android:id="@+id/tv_pw_tt_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sure"
                android:textSize="@dimen/s15"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="@dimen/m15"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>