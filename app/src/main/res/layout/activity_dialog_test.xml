<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDialog使用示例"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_dialog_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"/>
            <Button
                android:id="@+id/btn_dialog_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置各种参数"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XDialog使用示例"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_dialog_default2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"/>
            <Button
                android:id="@+id/btn_dialog_set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置各种参数"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDialogFg使用示例"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_dialog_lfg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"/>
            <Button
                android:id="@+id/btn_dialog_lfgset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置各种参数"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>